@model Fudee.Models.Category

@{
    ViewData["Title"] = "Usuwanie";
}

<h1 class="text-primary popins">Usuwanie</h1>

@{
    if (!String.IsNullOrEmpty(ViewBag.DeleteMessage))
    {
        <h5 class="alert alert-danger" role="alert"><i class="bi-info-circle"></i>&nbsp@ViewBag.DeleteMessage</h5>    }
    else
    {
        <h5 class="alert alert-danger" role="alert"><i class="bi-info-circle"></i>&nbsp;Czy napewno chcesz usunąć tę kategorię?</h5>

    }
}


<div>
    <h4 class="text-success"><b>Kategoria</b></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionCategoryy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescriptionCategoryy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Icon)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @{
            if (String.IsNullOrEmpty(ViewBag.DeleteMessage))
            {
                <input type="hidden" asp-for="IdCategory" />
               <input type="submit" value="Usuń" class="btn btn-danger" />
 
            }
        }
       
        <a asp-action="Index" class="btn btn-light">Powrót do listy</a>
    </form>
</div>
