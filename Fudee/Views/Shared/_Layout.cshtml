<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fudee</title>
    <link rel="stylesheet" href="~/css/bootstrap_colors.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fudee.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg  primary-background custom-expander primary-text">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/assets/Logo.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ">
                        <li class="nav-item me-5">
                            <a class="nav-link primary-text" href="#">O nas</a>
                        </li>
                        @*@{
                        if (User.IsInRole("admin")|| User.IsInRole("restaurator"))
                        {*@
                        <li class="nav-item me-5">
                            <a class="nav-link primary-text" asp-area="" asp-controller="Categories" asp-action="Index">
                                Kuchnie
                            </a>
                      
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link primary-text" asp-area="" asp-controller="Categories" asp-action="Index">Opinie</a>
                        </li>
                        <li class="nav-item me-5 primary-text">
                            <a class="nav-link primary-text" asp-area="" asp-controller="Home" asp-action="Index">Kontakt</a>
                        </li>

                    </ul>

                </div>
            </div>
                 <partial name="_LoginPartial" />
            
        </nav>
        <!--Koniec navbaru-->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--footersection-->

    <footer>
        <div class="container text-center">
            <div class="row">
                <div class="col breakpoints">
                    <img src="/assets/Logo.png" class="img-fluid" alt="icon" />
                    <div class="secondary-text mt-4 gray me-5">
                        “Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.”

                    </div>
                </div>
                <div class="col">
                    <ul class="footer-reset">
                        <li><h5 class="mb-3">o nas</h5></li>
                        <li><p>wizja</p></li>
                        <li><p>misja</p></li>
                        <li><p>news</p></li>
                        <li><p>faq</p></li>

                    </ul>
                </div>
                <div class="col">
                    <ul class="footer-reset">
                        <li><h5 class="mb-3">support</h5></li>
                        <li><p>accessibility</p></li>
                        <li><p>support center</p></li>
                        <li><p>feedback</p></li>
                    </ul>
                </div>
                <div class="col">
                    <ul class="footer-reset">
                        <li><h5 class="mb-3">kontakt</h5></li>
                        <li><p>masz pytanie, albo chcesz do nas napisać?</p></li>
                        <li><p class="fw-bolder">formularz kontaktowy</p></li>
                    </ul>
                </div>

            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
